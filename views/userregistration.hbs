<link rel="stylesheet" href="/static/css/userregistration.css">
<script src="/static/js/userregistration.js"></script>


<h2 style="text-align:center;">
    <svg class="bi bi-person-circle" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg" style="transform: translate(0px, -4.5px);">
        <path d="M13.468 12.37C12.758 11.226 11.195 10 8 10s-4.757 1.225-5.468 2.37A6.987 6.987 0 0 0 8 15a6.987 6.987 0 0 0 5.468-2.63z"/>
        <path fill-rule="evenodd" d="M8 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
        <path fill-rule="evenodd" d="M8 1a7 7 0 1 0 0 14A7 7 0 0 0 8 1zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z"/>
    </svg>
    User Registration
</h2>
<br>

<div id="usertype" style="text-align:center;">
    <div style="margin-bottom: 10px;">Are you...</div>
    <button type="button" id="explorer" class="btn">an Explorer?</button>
    <button type="button" id="leader" class="btn">a Troop Leader?</button>
    <button type="button" id="generaluser" class="btn">a General User?</button>
</div>

<form id="registration-form">

    <span class="section section-troop" style="display:none;">
        <hr>
        <div class="form-group">
            <label for="troop">Troop</label>
            <select class="form-control" id="troop"></select>
            <small><a href="#" onclick="showTroopAlert(); return false;">Don't see your troop?</a></small>
            <span id="troopalert"></span>
        </div>
        <br>
    </span>

    <span class="section section-explorer" style="display:none;">
        <hr>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="patrol">Patrol</label>
                <select class="form-control" id="patrol"></select>
                <small><a href="#" onclick="showPatrolAlert(); return false;">Don't see your patrol?</a></small>
                <span id="patrolalert"></span>
            </div>
            <div class="form-group col-md-6">
                <label for="patrol-role">Role</label>
                <select class="form-control" id="patrol-role">
                    <option value="-1" disabled selected>Choose</option>
                    <option>Patrol Chief</option>
                    <option>Assistant Patrol Chief</option>
                    <option>Member</option>
                </select>
            </div>
        </div>
        <br>
    </span>

    <span class="section section-leader" style="display:none;">
        <hr>
        <div class="form-group">
            <label for="leader-totem">Totem</label>
            <svg class="bi bi-question-diamond-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg" data-toggle="tooltip" title="A &quot;Totem&quot; is a self-chosen animal that embodies one's characteristics">
                <path fill-rule="evenodd" d="M9.05.435c-.58-.58-1.52-.58-2.1 0L.436 6.95c-.58.58-.58 1.519 0 2.098l6.516 6.516c.58.58 1.519.58 2.098 0l6.516-6.516c.58-.58.58-1.519 0-2.098L9.05.435zM6.57 6.033H5.25C5.22 4.147 6.68 3.5 8.006 3.5c1.397 0 2.673.73 2.673 2.24 0 1.08-.635 1.594-1.244 2.057-.737.559-1.01.768-1.01 1.486v.355H7.117l-.007-.463c-.038-.927.495-1.498 1.168-1.987.59-.444.965-.736.965-1.371 0-.825-.628-1.168-1.314-1.168-.901 0-1.358.603-1.358 1.384zm1.251 6.443c-.584 0-1.009-.394-1.009-.927 0-.552.425-.94 1.01-.94.609 0 1.028.388 1.028.94 0 .533-.42.927-1.029.927z"/>
            </svg>
            <input type="text" class="form-control" id="leader-totem" placeholder="Totem" maxlength="50" >
        </div>
        <br>
    </span>

    <span class="section section-user" style="display:none;">
        <hr>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="first-name">First Name</label>
                <input type="text" class="form-control" id="first-name" placeholder="First Name" maxlength="50" required>
            </div>
            <div class="form-group col-md-6">
                <label for="last-name">Last Name</label>
                <input type="text" class="form-control" id="last-name" placeholder="Last Name" maxlength="50" required>
            </div>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" placeholder="example@email.com" maxlength="255" required>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Password" required>
            </div>
            <div class="form-group col-md-6">
                <label for="password2">Re-enter Password</label>
                <input type="password" class="form-control" id="password2" placeholder="Password" required>
            </div>
        </div>

        <div class="alert alert-info" id="password-requirements" role="alert" style="display: none;">
            <div>
                Password must meet the following requirements:
            </div>
            <hr style="margin: 7px 0px 7px 0px;">
            
            <div class="rule-lower-upper">
                <span class="req-blank">
                    <svg class="bi bi-circle" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                    </svg>
                </span>
                <span class="req-check">
                    <svg class="bi bi-check-circle-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                    </svg>
                </span>
                Have both lowercase and uppercase letters
            </div>

            <div class="rule-number"> 
                <span class="req-blank">
                    <svg class="bi bi-circle" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                    </svg>
                </span>
                <span class="req-check">
                    <svg class="bi bi-check-circle-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                    </svg>
                </span>
                Have at least one number
            </div>

            <div class="rule-symbol">
                <span class="req-blank">
                    <svg class="bi bi-circle" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                    </svg>
                </span>
                <span class="req-check">
                    <svg class="bi bi-check-circle-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                    </svg>
                </span>
                Have at least one symbol (<span id="password-symbols"></span>)
            </div>

            <div class="rule-charlimit">
                <span class="req-blank">
                    <svg class="bi bi-circle" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                    </svg>
                </span>
                <span class="req-check">
                    <svg class="bi bi-check-circle-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                    </svg>
                </span>
                Be between <span class="password-minimum"></span> and <span class="password-maximum"></span> characters
            </div>

            <div class="rule-match">
                <span class="req-blank">
                    <svg class="bi bi-circle" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                    </svg>
                </span>
                <span class="req-check">
                    <svg class="bi bi-check-circle-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                    </svg>
                </span>
                Match your re-entered password
            </div>
        </div>
        
        <span id="formalert"></span>

        <br>
        <button type="submit" id="registration-form-submit" class="btn btn-primary">Submit</button>
        <br>
        <br>
    </span>
</form>

