<link rel="stylesheet" href="/static/css/morsereception.css">
<script src="/static/js/morse.js"></script>
<script src="/static/js/morsereception.js"></script>

<div style="margin-bottom: 1rem;">
  <h1 style="display: inline;">Morse Reception Trainer</h1>
  <div id="options-container" style="float: right;"></div>
</div>

<form id="playback-options" class="form-inline">
  <div class="form-group mb-2">
    <select class="form-control transmission-disable" id="level-select" style="width: 200px;"></select>
  </div>

  <button id="playback-button" type="button" class="btn btn-primary mb-2" onclick="toggleTransmission();">
    <svg class="play" viewBox="0 0 16 16" class="bi bi-play-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
      <path d="M11.596 8.697l-6.363 3.692c-.54.313-1.233-.066-1.233-.697V4.308c0-.63.692-1.01 1.233-.696l6.363 3.692a.802.802 0 0 1 0 1.393z"/>
    </svg>
    <svg class="stop" viewBox="0 0 16 16" class="bi bi-stop-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg" style="display: none;">
      <path d="M5 3.5h6A1.5 1.5 0 0 1 12.5 5v6a1.5 1.5 0 0 1-1.5 1.5H5A1.5 1.5 0 0 1 3.5 11V5A1.5 1.5 0 0 1 5 3.5z"/>
    </svg>
  </button>

</form>

<div id="practice-alert" class="alert alert-success" role="alert">
  Practice Mode Enabled
  <svg class="bi bi-question-diamond-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg" data-toggle="tooltip" title="Scoring is disabled for transmission speeds lower than the default values." style="transform: translate(0px, -2px);">
    <path fill-rule="evenodd" d="M9.05.435c-.58-.58-1.52-.58-2.1 0L.436 6.95c-.58.58-.58 1.519 0 2.098l6.516 6.516c.58.58 1.519.58 2.098 0l6.516-6.516c.58-.58.58-1.519 0-2.098L9.05.435zM6.57 6.033H5.25C5.22 4.147 6.68 3.5 8.006 3.5c1.397 0 2.673.73 2.673 2.24 0 1.08-.635 1.594-1.244 2.057-.737.559-1.01.768-1.01 1.486v.355H7.117l-.007-.463c-.038-.927.495-1.498 1.168-1.987.59-.444.965-.736.965-1.371 0-.825-.628-1.168-1.314-1.168-.901 0-1.358.603-1.358 1.384zm1.251 6.443c-.584 0-1.009-.394-1.009-.927 0-.552.425-.94 1.01-.94.609 0 1.028.388 1.028.94 0 .533-.42.927-1.029.927z"/>
  </svg>
  <br>
  <a href="#" class="" onclick="setDefaults(); return false;">Re-enable scores.</a>
</div>

<div id="work-area" style="margin-bottom: 10px;"></div>

<div>
  <form id="plaintext-form" autocomplete="off">
    <div class="form-group row">
      <label for="plaintext-entry" class="col-sm-2 monospace">MESSAGE: </label>
      <div class="col-sm-10">
        <textarea class="form-control monospace" id="plaintext-entry" rows="3" disabled></textarea>
        <button type="submit" class="btn btn-primary check" style="width: 100%;" disabled>Check</button>
      </div>
    </div>
  </form>
</div>

<!--Templates-->
<template id="template-options-morsereception">
  <div class="form-group row">
    <label class="col-sm-7 col-form-label" for="wpm">
      Speed
      <svg class="bi bi-question-diamond-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg" data-toggle="tooltip" title="Overall transmission speed. Measured in words per minute." style="transform: translate(0px, -1px);">
        <path fill-rule="evenodd" d="M9.05.435c-.58-.58-1.52-.58-2.1 0L.436 6.95c-.58.58-.58 1.519 0 2.098l6.516 6.516c.58.58 1.519.58 2.098 0l6.516-6.516c.58-.58.58-1.519 0-2.098L9.05.435zM6.57 6.033H5.25C5.22 4.147 6.68 3.5 8.006 3.5c1.397 0 2.673.73 2.673 2.24 0 1.08-.635 1.594-1.244 2.057-.737.559-1.01.768-1.01 1.486v.355H7.117l-.007-.463c-.038-.927.495-1.498 1.168-1.987.59-.444.965-.736.965-1.371 0-.825-.628-1.168-1.314-1.168-.901 0-1.358.603-1.358 1.384zm1.251 6.443c-.584 0-1.009-.394-1.009-.927 0-.552.425-.94 1.01-.94.609 0 1.028.388 1.028.94 0 .533-.42.927-1.029.927z"/>
      </svg>
    </label>
    <div class="col-sm-5">
      <select class="form-control transmission-disable" id="wpm"></select>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-7 col-form-label" for="fwpm">
      Farnsworth Compression
      <svg class="bi bi-question-diamond-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg" data-toggle="tooltip" title="Individual character speed. Keep this value high for best results." style="transform: translate(0px, -1px);">
        <path fill-rule="evenodd" d="M9.05.435c-.58-.58-1.52-.58-2.1 0L.436 6.95c-.58.58-.58 1.519 0 2.098l6.516 6.516c.58.58 1.519.58 2.098 0l6.516-6.516c.58-.58.58-1.519 0-2.098L9.05.435zM6.57 6.033H5.25C5.22 4.147 6.68 3.5 8.006 3.5c1.397 0 2.673.73 2.673 2.24 0 1.08-.635 1.594-1.244 2.057-.737.559-1.01.768-1.01 1.486v.355H7.117l-.007-.463c-.038-.927.495-1.498 1.168-1.987.59-.444.965-.736.965-1.371 0-.825-.628-1.168-1.314-1.168-.901 0-1.358.603-1.358 1.384zm1.251 6.443c-.584 0-1.009-.394-1.009-.927 0-.552.425-.94 1.01-.94.609 0 1.028.388 1.028.94 0 .533-.42.927-1.029.927z"/>
      </svg>
    </label>
    <div class="col-sm-5">
      <select class="form-control transmission-disable" id="fwpm"></select>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-7 col-form-label" for="static-level">Background Static</label>
    <div class="col-sm-5">
      <select class="form-control" id="static-level"></select>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-7 col-form-label" for="tone-frequency">Tone Frequency (Hz)</label>
    <div class="col-sm-5">
      <input type="text" class="form-control" id="tone-frequency">
    </div>
  </div>
</template>
